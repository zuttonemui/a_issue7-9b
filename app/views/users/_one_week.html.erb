<table class="table table-bordered">
  <thead>
    <tr>
      <th>6日前</th>
      <th>5日前</th>
      <th>4日前</th>
      <th>3日前</th>
      <th>2日前</th>
      <th>昨日</th>
      <th>今日</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @books.created_days_ago(6).count %></td>
      <td><%= @books.created_days_ago(5).count %></td>
      <td><%= @books.created_days_ago(4).count %></td>
      <td><%= @books.created_days_ago(3).count %></td>
      <td><%= @books.created_days_ago(2).count %></td>
      <td><%= @books.created_yesterday.count %></td>
      <td><%= @books.created_today.count %></td>
    </tr>
  </tbody>
</table>

<div>
  <%= line_chart [["6日前", @books.created_days_ago(6).count], ["5日前", @books.created_days_ago(5).count], ["4日前", @books.created_days_ago(4).count], ["3日前", @books.created_days_ago(3).count], ["2日前", @books.created_days_ago(2).count], ["1日前", @books.created_yesterday.count], ["今日", @books.created_today.count]], width: "700px" %>
</div>