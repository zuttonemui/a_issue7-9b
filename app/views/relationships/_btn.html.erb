<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to 'UnFollow', user_relationships_path(user),method: :delete, class: "btn btn-info btn-sm" %>
  <% else %>
    <%= link_to 'Follow', user_relationships_path(user), method: :post, class: "btn btn-success btn-sm" %>
  <% end %>
<% end %>