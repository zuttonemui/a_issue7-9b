<table class="table">
  <tbody>
    <% book.book_comments.each do |book_comment| %>
    <tr>
      <td class="w-25">
        <%= link_to user_path(book_comment.user) do %>
          <%= image_tag book_comment.user.get_profile_image(100,100) %></br>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td class="w-50"><%= book_comment.comment %></td>
      <% if book_comment.user == current_user %>
        <td><%= link_to "Delete", book_book_comment_path(book, book_comment), method: :delete, "data-confirm" => "delete?", class: "btn btn-danger btn-sm", remote: true %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>